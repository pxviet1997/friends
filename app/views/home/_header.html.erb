<div class="flex items-center justify-between w-full h-16 bg-indigo-400 px-7 lg:px-10">
  <div class="flex items-center gap-6">
    <%= link_to "Friends", root_path,  class: "font-oswald text-5xl text-white uppercase" %>
    <nav class="text-white">
      <ul class="flex gap-4 text-sm">
        <li><%= link_to "My Friends", friends_path %></li>
        <li><%= link_to "Add Friend", new_friend_path %></li>
      </ul>
    </nav>
  </div>
  <div>
    <nav class="text-white">
      <% if user_signed_in? %>
        <%= current_user.email %>
      <% end %>
      <ul class="flex gap-4 text-sm">
        <% if user_signed_in? %>
          <li><%= link_to "Sign out", destroy_user_session_path, "data-turbo-method": :delete %></li>
          <li><%= link_to "Edit Profile", edit_user_registration_path %></li>
        <% else %>
          <li><%= link_to "Sign Up", new_user_registration_path, class: 'btn btn-indigo' %></li>
          <li><%= link_to "Sign In", new_user_session_path, class: 'btn btn-outline btn-white' %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</div>
