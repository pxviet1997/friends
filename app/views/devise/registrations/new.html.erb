<h2 class="font-bold text-4xl mb-5">Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="flex flex-col gap-4">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 w-full", placeholder: "Email" %>
    <%= f.password_field :password, autocomplete: "new-password", class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 w-full", placeholder: (@minimum_password_length.present? ? "Password (#{@minimum_password_length} characters minimum)" : "Password") %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 w-full", placeholder: "Password confirmation" %>
  </div>
  <div class="actions flex items-center gap-2 mt-5">
    <%= f.submit "Sign up", class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
