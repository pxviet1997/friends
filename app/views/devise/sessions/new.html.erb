<div>
  <h2 class="font-bold text-4xl mb-5">Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="flex flex-col gap-4">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full", placeholder: "Email" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full", placeholder: "Password" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="field my-5">
        <%= f.check_box :remember_me, class: 'rounded-[2px] shadow border border-gray-400 outline-none' %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    <div class="actions flex items-center gap-2">
      <%= f.submit "Log in", class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>
</div>
