<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mt-4 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <div class="flex flex-col gap-5">
    <% content_for :title, "Friends" %>
    <div class="flex justify-between items-center">
      <h1 class="font-bold text-4xl">Friends</h1>
      <%= link_to "New friend", new_friend_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
    </div>
    <% if !@friends.empty? %>
      <div id="friends" class="min-w-full">
        <table class="table-auto w-full border shadow outline outline-1 outline-gray-400 rounded-md overflow-hidden">
          <thead>
            <tr>
              <th class="border px-4 py-2">First name</th>
              <th class="border px-4 py-2">Last name</th>
              <th class="border px-4 py-2">Email</th>
              <th class="border px-4 py-2">Phone</th>
              <th class="border px-4 py-2">User Id</th>
              <th class="border px-4 py-2">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @friends.each do |friend| %>
              <tr>
                <td class="border px-4 py-2"><%= friend.first_name %></td>
                <td class="border px-4 py-2"><%= friend.last_name %></td>
                <td class="border px-4 py-2"><%= friend.email %></td>
                <td class="border px-4 py-2"><%= friend.phone %></td>
                <th class="border px-4 py-2"><%=friend.user_id%></th>
                <td class="border px-4 py-2 text-blue-500">
                  <%= link_to "Show", friend %>
                  <%= link_to "Edit", edit_friend_path(friend) %>
                  <%= button_to "Delete", friend, method: :delete %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="">No friends found. Go add some friends!</p>
    <% end %>
  </div>
</div>
