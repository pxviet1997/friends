<div class="w-full p-6 bg-white border border-gray-300 rounded shadow outline-none">
  <div class="w-full">
    <% if notice.present? %>
      <p class="inline-block px-3 py-2 mt-4 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %></p>
    <% end %>
    <h1 class="mb-5 text-4xl font-bold"><%= @friend.full_name %></h1>
    <div id="<%= dom_id @friend %>">
      <p class="flex gap-2">
        <strong class="block mb-1 font-semibold">Email:</strong>
        <%= @friend.email %>
      </p>
      <p class="flex gap-2">
        <strong class="block mb-1 font-semibold">Phone:</strong>
        <%= @friend.phone %>
      </p>
    </div>
    <div class="mt-4">
      <%= link_to "Edit this friend", edit_friend_path(@friend), class: "btn btn-indigo mr-2" %>
      <%= link_to "Back to friends", friends_path, class: "btn btn-outline" %>
      <div class="inline-block ml-2">
        <%= button_to "Delete this friend", @friend, method: :delete, class: "btn !leading-tight btn-indigo" %>
      </div>
    </div>

  </div>
</div>
